@addTagHelper "*,Microsoft.AspNetCore.Mvc.TagHelpers"
@addTagHelper "*,NCP.WebUI"
@model NCP.WebUI.Model.ProductListViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<table class="table table-hovered table-bordered">
    <thead></thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.UnitPrice</td>
                <td>@item.UnitsInStock</td>
                <td>@item.Discontinued</td>
                <td>@Html.ActionLink("Add to cart","AddToCart","Cart",new { id=item.ID})</td>
            </tr>
        }
    </tbody>
</table>
<list-paging current-category="@Model.CurrentCategory"
             current-page="@Model.CurrentPage"
             page-count="@Model.PageCount"
             page-size="@Model.PageSize">

</list-paging>
