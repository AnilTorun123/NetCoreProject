@model NCP.WebUI.Model.CategoryListViewModel
@{
    Layout = null;
}
@foreach (var item in Model.Categories)
{
    var css = "list-group-item";
    if (item.ID == Model.CurrentCategory)
    {
        css += " active";
    }
    <a href="/Home/Index?category=@item.ID " class="@css">@item.Name</a>
}
<a href="/Home/Index" class="list-group-item">Tümü</a>

